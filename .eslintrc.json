{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true
  },
  "plugins": ["prettier"],
  "extends": [
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "next/core-web-vitals"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 4,
        "trailingComma": "es5"
      }
    ]
  }
}
